<UserControl x:Class="ChosungComboBox.CComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChosungComboBox"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="root">

    <Grid>
        
            <local:ComboBox2 IsEditable="True"
                             IsDropDownOpen="{Binding ElementName=root, Path=IsDropDownOpen}"
                             StaysOpenOnEdit="True"
                             IsTextSearchEnabled="False"
                             x:Name="comboBox"
                             PreviewKeyDown="comboBox_PreviewKeyDown"
                             KeyDown="comboBox_KeyDown"
                             SelectionChanged="comboBox_SelectionChanged"
                             TextBoxBase.TextChanged="comboBox_TextChanged"
                             PropertyChanged="comboBox_PropertyChanged"
                             DropDownClosed="comboBox_DropDownClosed"
                             HorizontalContentAlignment="Left"
                             VerticalContentAlignment="Center">
                
            </local:ComboBox2>
        
    </Grid>
    
</UserControl>
