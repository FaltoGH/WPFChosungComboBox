<UserControl x:Class="WPFChosungComboBox.ChosungComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFChosungComboBox"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="400"
             x:Name="root">

    <Grid>
        <AdornerDecorator>
            <local:ComboBox2 IsEditable="True"
                             IsDropDownOpen="{Binding ElementName=root, Path=IsDropDownOpen}"
                             StaysOpenOnEdit="True"
                             IsTextSearchEnabled="False"
                             x:Name="comboBox"
                             PreviewKeyDown="comboBox_PreviewKeyDown"
                             KeyDown="comboBox_KeyDown"
                             SelectionChanged="comboBox_SelectionChanged"
                             PropertyChanged="comboBox_PropertyChanged"
                             DropDownClosed="comboBox_DropDownClosed"
                             HorizontalContentAlignment="Left"
                             VerticalContentAlignment="Center">
                <local:WatermarkService.Watermark>
                    <TextBlock x:Name="textBlock" VerticalAlignment="Center" d:Text="Sample Cue"/>
                </local:WatermarkService.Watermark>
            </local:ComboBox2>
        </AdornerDecorator>
    </Grid>
    
</UserControl>
